import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'
@import 'helpers/layout'

import('../blocks/**/*')


#slider
	width 940px
	height 350px
	margin 0 auto
	position relative
	overflow hidden

	.slides
		display flex
		flex-wrap nowrap
		position relative

		.slide
			position relative

			&.active
				z-index 10

			img
				display block
				max-width 100%


	.slider-content
		position absolute
		bottom 20px
		left 20px
		right 20px
		z-index 100
		padding 15px
		background rgba(0, 0, 0, .6)
		border-radius 5px

		display flex
		align-items center

		.slider-arrows
			display flex

			.arrow
				width 40px
				height 40px
				margin-right 20px
				border-radius 100%
				line-height 38px
				background #1b1a1a
				color #fff
				text-align center
				font-size 20px
				cursor pointer
				transition background .2s

				&:hover
					background #363535;

		.title
			width 100%
			font-size 22px
			color #fff
			flex-grow 1
			line-height: 1.2

		.button
			display inline-block
			height 45px
			line-height 45px
			padding 0 40px
			border 1px solid #fbd687
			border-radius 4px
			background: linear-gradient(to bottom, #ffebcf 0%,#f2b055 50%,#ec9f35 51%,#f9ca4f 100%);

			.button-text
				width 100%
				height 100%

				text
					text-transform uppercase
					font-size 16px
					font-weight bold
					color #390000
					text-shadow 1px 1px 1px rgba(255, 255, 255, .75)
